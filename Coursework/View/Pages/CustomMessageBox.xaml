<UserControl x:Class="Coursework.View.Pages.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Coursework.View.Pages"
        mc:Ignorable="d" Height="140" Width="360" IsVisibleChanged="UserControl_IsVisibleChanged">
    <Border  CornerRadius="6" Background="#FF272B3A">
        <Grid>
            <TextBlock Name="Text" Text="TEXT" Foreground="White" FontSize="15" Margin="20,20,20,60" TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>

            <Button Name="OkButton" Style="{StaticResource GreenButton}" Margin="-150,0,0,20" VerticalAlignment="Bottom" Click="OkButton_Click"/>
            <Button Name="CancelButton" Style="{StaticResource OnlyRedButton}" Margin="150,0,0,20" VerticalAlignment="Bottom" Click="CancelButton_Click"/>
        </Grid>
    </Border>
</UserControl>
